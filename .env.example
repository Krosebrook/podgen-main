# NanoGen Studio Environment Configuration

# ==============================================
# REQUIRED: Google Gemini API Configuration
# ==============================================
# Get your API key from: https://aistudio.google.com/app/apikey
API_KEY=your_gemini_api_key_here

# ==============================================
# Optional: Application Configuration
# ==============================================

# Environment (development, staging, production)
NODE_ENV=development

# Application Port (for local development)
PORT=5173

# ==============================================
# Optional: AI Service Configuration
# ==============================================

# Enable request caching (true/false)
ENABLE_AI_CACHE=true

# Cache TTL in milliseconds (default: 1 hour)
CACHE_TTL_MS=3600000

# Maximum cache size (number of entries)
MAX_CACHE_SIZE=100

# Enable cost tracking (true/false)
ENABLE_COST_TRACKING=true

# ==============================================
# Optional: Security Configuration
# ==============================================

# Enable prompt sanitization (true/false)
ENABLE_PROMPT_SANITIZATION=true

# Rate limit per user (requests per minute)
RATE_LIMIT_PER_USER=100

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=60000

# ==============================================
# Optional: Performance Configuration
# ==============================================

# Enable lazy loading (true/false)
ENABLE_LAZY_LOADING=true

# Enable service worker (true/false)
ENABLE_SERVICE_WORKER=true

# ==============================================
# Optional: Monitoring & Logging
# ==============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable structured logging (true/false)
ENABLE_STRUCTURED_LOGGING=true

# ==============================================
# Optional: External Services
# ==============================================

# Redis connection string (for distributed caching)
# REDIS_URL=redis://localhost:6379

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# ==============================================
# Docker Configuration (for docker-compose)
# ==============================================

# Docker image tag
DOCKER_IMAGE_TAG=latest

# Container port mapping
CONTAINER_PORT=3000
HOST_PORT=3000
